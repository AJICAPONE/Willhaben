.all-adverts--list
  display block
  margin-right 70px

.all-adverts--list-ul
  display flex

.title-little
  margin-bottom 15px
  font-size 16px
  color #3a3a3a

.all-adverts--item
  margin-bottom 8px

  a
    color #01AAFF

.section-title
  font-size 30px
  color #3a3a3a
  padding-bottom 35px

.catalog-items--list
  display flex
  flex-flow: row wrap;
  justify-content space-between

.catalog-items--item
  flex-shrink: 1;
  flex-grow: 0;
  flex-basis: calc(25% - 28px);
  flex-direction: column;
  display: flex;
  justify-content: center;
  position: relative;
  margin-bottom: 40px;
  box-shadow: 8px 0px 20px -1px rgba(0, 0, 0, 0.24);

.catalog-price-info
  display flex
  justify-content space-between
  margin-bottom 10px
  color #3a3a3a
  align-items center

  span
    font-size 14px

.catalog-info-block
  padding 18px 30px
  background-color #fff

.catalog-date-info
  font-size 12px
  color #474747

.catalog-name__item
  margin-bottom 10px
  display flex
  color #01AAFF
  font-size 14px

.catalog-city__name
  color #3a3a3a
  font-size 14px

.catalog-items--item__img
  width: 100%;
  max-height: 247px;
  height: auto;

.catalog-button--load-more
  margin 0 auto

.categories-all-wrap
  display flex
  flex-wrap wrap

.categories-all-wrap-ul
  display block
  width 25%

.categories-all-list
  flex-direction: column;
  display: flex;
  position: relative;
  margin-bottom: 40px;

.title-categ
  color #01AAFF
  font-size 14px
  margin-bottom 15px

.categories-all-item
  margin-bottom 6px
  color #3a3a3a

.footer-main-wrap
  padding-left 0
  padding-right 0

