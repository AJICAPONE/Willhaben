.advert-main--info
  display flex
  margin-bottom 35px
.advert-slider-img-slick
  margin-right 30px
  width: 100%;
  max-width: 468px;
.advert-slider-product-js--wrap
  position relative
  display flex
  flex-direction column
  justify-content center

.adverts-controls--arrows
  display flex
  justify-content space-between
  position absolute
  width 100%

.adverts-slider__arrows
  background-color #fff
  size(48px)
  display flex
  justify-content center
  align-items center
  border-radius 7px
  cursor pointer

  .icon
    fill #00A4E8
    size(17px,31px)

.catalog-item-title
  color #00A4E8
  font-size 25px
  font-family OSSB, sans-serif
  margin-bottom 30px

.advert-catalog--item__summ
  font-size 25px
  color #3A3A3A
  font-family OSSB, sans-serif

.advert-catalog--item-summ-and-date
  display flex
  justify-content space-between
  align-items: flex-end;
  margin-bottom 15px

.advert-catalog--item__date
  color rgba(58, 58, 58, 0.5)
  font-size 14px
  font-family OSL, sans-serif

.advert-catalog--item__adress
  font-size 14px
  font-family OSR,sans-serif
  color #3A3A3A

.arvert-catalog--map-full-view
  font-size 13px
  font-family OSR,sans-serif
  color #00A4E8
  cursor pointer

.advert-catalog--map-case
  display flex
  flex-direction column

.advert-map-case
  display flex
  width 100%
  height 250px
  margin-bottom 20px

.advert-catalog--show--phone
  max-width 100% !important
  margin-bottom 20px

.advert-catalog--send--massage
  max-width 100% !important
  background-color transparent !important
  border: 1.5px solid #01aaff;
  color: #01aaff !important;

.advert-catalog-profile-seller
  border-top: 1.5px solid rgba(173,173,173,0.2);
  margin-top 20px
  padding-top 18px
  display flex
  justify-content space-between
  margin-bottom 20px

.advert-catalog-profile-seller--info
  display flex
  flex-direction column

.advert-catalog-profile-sel
  font-family OSR,sans-serif
  color rgba(71, 71, 71, 0.61)
  margin-bottom 14px

.advert-catalog-profile-seller-name
  color #474747
  font-family OSR,sans-serif
  font-size 16px

.advert-catalog-profile-seller-web
  font-family OSR,sans-serif
  color rgba(71, 71, 71, 0.61)

.advert-catalog-profile-seller--photo
  size(100px)

.advert-catalog-profile-seller-all
  background-color transparent !important
  border: 1.5px solid #ADADAD !important
  color #474747!important
  max-width 100% !important

.advers-js-attention-slider__nav
  margin-top 20px

  .slick-list
    margin-right -15px
    margin-left -15px

.advert-slider-img-slick__nav
  margin-right 15px
  margin-left 15px

.advert-seller-item-desc--wrap
  display flex
  flex-direction column
  margin-bottom 40px

.advert-seller-item-title
  margin-bottom 15px
  color #3A3A3A

.advert-seller-item-desc
  font-size 14px
  font-family OSR,sans-serif
  color #3A3A3A

.other-adverts-seller
  margin-bottom 35px

  span
    font-size 14px

.adverts-padding-left
  padding-left 0





