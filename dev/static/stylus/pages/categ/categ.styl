.sidebar-catalog
  border-top: 1.5px solid rgba(173,173,173,0.2);
  padding-top 70px

.categ-wrapper
  display flex

.catalog-list
  margin-bottom 35px

  .icon
    width: 6px;
    height: 14px;
    fill: #939393;
    margin-right 10px
    transition-duration 100ms
    transform: rotate(180deg);

.catalog-item

  span
    display: flex;
    flex-direction: row-reverse;
    align-items: center;
    width: fit-content;
    cursor pointer

.rotate-menu
  transform: rotate(270deg) !important
.catalog-list-level2
  padding-left 17px

.catalog-item-level2
  font-family OSR,sans-serif

.catalog-list-level3
  padding-left 28px

.catalog-item-level3
  margin-bottom 3px

  a
    color #01AAFF !important
    font-family OSR,sans-serif

.categ-filter-price-wrap
  display flex
  margin-bottom 40px

.categ-filter-price

    span
      display block
      font-size 16px
      font-family OSSB, sans-serif
      margin-bottom 12px


.categ-fil-price
  width 100%
  height 35px
  border: 1.2px solid #adadad;
  background-color transparent
  padding-left 12px

  &:first-child
    border-radius 4px 0 0 4px
    border-right none

  &:last-child
    border-radius 0px 4px 4px 0px

.catalog-sort-by--wrap
  max-width 165px
  width 100%

.catalog-sort-all--items
  position: relative;
  background: rgba(58,58,58,0.05);
  border: 1.5px solid #adadad;
  padding: 10px;
  font-family: OSSB, sans-serif;
  border-radius: 6px;
  color: #3a3a3a;
  height: 45px;
  width: 100%;
  display: flex;
  align-items: center;
  cursor: pointer
  &:first-child
    border-radius: 6px 0 0 6px
    border: 1.5px solid #adadad;

  &:last-child
    border-radius: 0px 6px 6px 0px
    border: 1.5px solid #adadad;

.catalog-sort-all--items
  border-right none
  border-left none
  border-radius 0
  padding 0 15px

.catalog-sort-all--items.active
  background: rgba(58,58,58,0.2);

.categ-filter-items
  margin-top 30px
  .catalog-items--item
    flex-basis: calc(34% - 28px);

.categ-filter-show-items
  max-width 100% !important
  border none

.categ-filter-items-pages--list
  display flex

.categ-filter-items-pages--item
  display flex
  align-items center
  margin-right 15px
  color #ADADAD
  cursor pointer

  .icon
    size(12px)
    fill #01AAFF
    transform rotate(180deg)

.categ-filter-items-pages--item.active
    color #01AAFF



