footer
  flex 0 0 auto
  background-color #F7F7FA
  padding 50px 0

.footer-main-wrap
  border-top: 1.5px solid rgba(173,173,173,0.2);
  padding-top 25px

.footer-logo-link
  margin-bottom 32px

  .icon
    size(135px,36px)

.footer-logo-and-writ
  display flex
  flex-direction column

.footer-ad-writ
  text-align center
  max-width 224px

.footer-items
  margin-bottom 16px


.footer-item__links
  font-family OSSB, sans-serif

.footer-copy-data
  color #3a3a3a

  span
    font-family OSSB,sans-serif
    font-size 12px
    margin-bottom 8px
    display block

  a
    font-size 12px
    display flex
    margin-bottom 8px
    color #0F83D7
    font-family OSSB, sans-serif


.footer-pay-of
  display flex

  a
    color #0F83D7
    margin-left 3px
    margin-bottom 0
    display inline-flex

.footer-social__link

  .icon
    size(24px)
    fill #0F83D7

.footer-social
  display flex
  justify-content space-between

.footer-social--title
  font-family OSSB, sans-serif
  margin-bottom 15px
  display flex

.popup-register--link
  text-align center
  max-width 224px

.modal-footer
  justify-content space-between
  border-top none
  padding-top 0

